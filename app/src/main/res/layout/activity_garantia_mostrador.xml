<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GarantiaMostradorActivity"
    android:background="@drawable/bg_gradient">


    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_view" />

    <TextView
        android:id="@+id/textNickname2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/top_view"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="38dp"
        android:text="Garantias De Mostrador"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonBackGarantiaMostrador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="12dp"
        android:text="Back"
        app:icon="@drawable/ic_back"
        android:textColor="@color/white"
        />

    <!-- Texto centrado en pantalla con desplazamiento vertical -->

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        android:clickable="true"
        android:onClick="onClickDocumentosBasicos"
        android:text="Elija una opcion:"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />




    <!-- Texto centrado en pantalla con desplazamiento vertical -->




    <TextView
        android:id="@+id/RefaccionesdeMostrador"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="80dp"
        android:clickable="true"
        android:onClick="onClickRefaccionesdeMostrador"
        android:text="Garantías para refacciones de Mostrador."
        android:textColor="@color/cyan"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/AnexoGarantiasMostrador"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RefaccionesdeMostrador"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70sp"
        android:layout_marginEnd="80dp"
        android:clickable="true"
        android:onClick="onClickAnexoGarantiasMostrador"
        android:text="Homologación y anexos al tramite de garantias"
        android:textColor="@color/cyan"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />




</RelativeLayout>
